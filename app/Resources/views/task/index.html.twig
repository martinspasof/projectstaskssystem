{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="page-header">Tasks</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>Task Name</th>
            <th>Project Name</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Status</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for task in tasks_json_decode.tasks %}
        <tr>
            <th scope="row">{{ task.0.id }}</th>
            <td>{{ task.0.taskName }}</td>
            <td>{{ task.projectName }}</td>
            <td>{{ task.0.description }}</td>
            <td>{{ task.0.dueDate.date|date('F j, Y, g:i a') }}</td>
            <td>{{ task.0.status }}</td>
            <td>
                <a href="/task/details/{{ task.0.id }}" class="btn btn-success">View</a>
                <a href="/task/edit/{{ task.0.id }}" class="btn btn-default">Edit</a>
                <a href="/task/delete/{{ task.0.id }}" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}